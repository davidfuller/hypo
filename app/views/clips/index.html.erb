<p id="notice"><%= notice %></p>

<h1>Clips</h1>
<%= render 'search', path: clips_path, remote: false, search: :search, name: nil %>

<%= will_paginate @clips %>

<table class='table'>
  <thead>
    <tr>
      <th>Volume</th>
      <th>Slot</th>
      <th>Number</th>
      <th>Name</th>
      <th>Filename</th>
      <th>Timecode</th>
      <th>Duration</th>
      <th>Machine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clips.each do |clip| %>
      <tr>
        <td><%= clip.volume %></td>
        <td><%= clip.slot %></td>
        <td><%= clip.number %></td>
        <td><%= clip.name %></td>
        <td><%= clip.filename %></td>
        <td><%= clip.timecode %></td>
        <td><%= clip.duration %></td>
        <td><%= clip.machine.name if clip.machine %></td>
        <td><%= link_to 'Show', clip %></td>
        <td><%= link_to 'Edit', edit_clip_path(clip) %></td>
        <td><%= link_to 'Destroy', clip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Clip', new_clip_path %>
