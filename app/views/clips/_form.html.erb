<%= form_with(model: clip, local: true) do |form| %>
  <% if clip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(clip.errors.count, "error") %> prohibited this clip from being saved:</h2>

      <ul>
        <% clip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group row">
    <%= form.label :slot, class: 'col-2 col-form-label pull-right' %>
    <div class="col-2">
      <%= form.text_field :slot, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group row">
    <%= form.label :number, class: 'col-2 col-form-label pull-right'  %>
    <div class="col-2">
      <%= form.number_field :number, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group row">
    <%= form.label :name, class: 'col-2 col-form-label pull-right'  %>
    <div class="col-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group row">
    <%= form.label :filename, class: 'col-2 col-form-label pull-right'  %>
    <div class="col-10">
      <%= form.text_field :filename, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group row">
    <%= form.label :timecode, class: 'col-2 col-form-label pull-right'  %>
    <div class="col-6">
      <%= form.text_field :timecode, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group row">
    <%= form.label :duration, class: 'col-2 col-form-label pull-right'  %>
    <div class="col-6">
      <%= form.text_field :duration, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group row">
    <%= form.label :machine_id, class: 'col-2 col-form-label pull-right'  %>
    <div class="col-6">
      <%= form.collection_select(:machine_id, Machine.all, :id, :name, {:include_blank => 'Please Select A Machine'}, class: 'form-control') %>
    </div>
  </div>

  <div class="field form-group row">
    <%= form.label :volume, "Volume name", class: 'col-2 col-form-label pull-right'  %>
    <div class="col-6">
      <%= form.text_field :volume, class: 'form-control' %>
    </div>
  </div>

  <div class="actions form-group row">
    <div class="col-6 offset-2">
      <%= form.submit nil, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
