<p id="notice"><%= notice %></p>
<div class = 'container'>
  <h2>Machine Control</h2>
  <div class = 'row'>
    <div class = 'col-3'>
      <strong>Name:</strong>
      <%= @machine.name %>
    </div>
    <div class = 'col-3'>
      <strong>IP Address</strong>
      <%= @machine.ip %>
    </div>
    <div class = 'col-3'>
      <strong>Port:</strong>
      <%= @machine.port %>
    </div>
  </div>
  <div class='row'>
    <div class='col-1'>
      <%= button_to 'Play', play_machine_path, method: :get, class: 'btn btn-primary' %>
    </div>
    <div class='col-1'>
      <%= button_to 'Stop', stop_machine_path, method: :get, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="card border-primary mb-3" style="max-width: 18rem;">
    <div class="card-header">Machine Response</div>
    <div class="card-body text-primary">
      <p class="card-text">
        <% if @messages %>
          <% @messages.each do |message| %>
            <%= message %><br />
          <% end %>    
        <% end %>
      </p>
    </div>
  </div>
<%= link_to 'Edit', edit_machine_path(@machine) %> |
<%= link_to 'Back', machines_path %>
</div>