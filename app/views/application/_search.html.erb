<%= form_tag path, :method => 'get', :class => 'form-inline' , :remote => remote do %>
    <span class="input-group-btn">
        <%= text_field_tag search, params[search], {:class => 'form-control field-title-search', :placeholder => "Search", :autofocus => true} %>
        <%= button_tag 'Search' type: 'submit', :class => 'btn btn-primary', name: name, value: name %>
            
        <%= button_tag "Clear", type: :button, :class => 'btn btn-primary', :onclick =>'document.getElementById("' + search.to_s + '").value=""' %>
    </span> 
<% end %>